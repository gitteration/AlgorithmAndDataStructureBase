{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "My Task",
            "type": "shell",
            "command": "python",
            "args": ["${file}"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8"
                }
            }
        }
    ]
}